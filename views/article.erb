<div id="title" style="background: <%= @article.image %>;">
  <h1><%= @article.title %></h1>
</div>

<section id="summary">
  <p><%= @article.summary %></p>
</section>
<section id="free_content">
  <%= @article.free_content %>
</section>

<% if @user && @user.can_access_content %>
  <section id="paid_content">
    <%= @article.paid_content %>
  </section>
<% else %>
  <%= erb :purchase_form %>
<% end %>
