<form action="/registration" method="POST" class="klarna-form"
    data-api-key="<%= API_KEY %>"
    data-flow="registration"
    data-jsonp="<%= @jsonp %>"
    data-locale="<%= locale %>"
    data-in_app="<%= in_app %>">

    <input type="hidden" name="article_id" value="<%= @article.id %>" />
</form>

<script>
  onKlarnaSuccess = function(paid_content){
    document.getElementById('paid_content').innerHTML = paid_content;
  }
</script>
<script async src="<%= script_url %>/web/js/sdk.min.js"></script>
